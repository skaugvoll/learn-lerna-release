{
  "npmClient": "npm",
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        ".env"
      ]
    },
    "version": {
      "allowBranch": [
        "main",
        "production"
      ],
      "message": "chore(release): release",
      "ignoreChanges": [
        "**/*.md",
        ".env"
      ]
    }
  }
}