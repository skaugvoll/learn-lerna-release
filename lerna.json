{
  "npmClient": "npm",
  "packages": ["packages/*"],
  "version": "independent",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": ["*.md", ".env"]
    },
    "version": {
      "allowBranch": ["main", "production"],
      "conventionalCommits": true,
      "message": "chore(release): release",
      "ignoreChanges": ["**/*.md", ".env"]
    }
  }
}
